      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "./build"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}